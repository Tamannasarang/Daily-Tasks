#Right-Angle Triangle (descending order)
rows = 7
for i in range(rows, 0, -1):  # Outer loop for rows
    for j in range(i):        # Inner loop for stars
        print('*', end='')
    print()                   # Move to the next line


#Right-Aligned Triangle
rows = 5
for i in range(1, rows + 1):
    for j in range(rows - i):  # Print spaces
        print(' ', end='')
    for k in range(i):         # Print stars
        print('*', end='')
    print()
    
#Right-Angle Triangle (Ascending Order) pattern for printing alternating 1 and 0
rows = 5
for i in range(1, rows + 1):   # Outer loop for rows
    for j in range(i):         # Inner loop for numbers in each row
        print('1' if j % 2 == 0 else '0', end='')  # Alternate between 1 and 0
    print()                    # Move to the next line


#Right-Aligned Triangle (Ascending Order) pattern for printing alternating 1 and 0
rows = 5
for i in range(1, rows + 1):
    for j in range(rows - i):  # Print spaces
        print(' ', end='')
    for k in range(i):         # Print alternating 1 and 0
        print('1' if k % 2 == 0 else '0', end='')
    print()                    # Move to the next line


#Pyramid shape
rows = 6
for i in range(rows, 0, -1):
    for j in range(rows - i):  # Print spaces
        print(' ', end='')
    for k in range(2 * i - 1): # Print stars
        print('*', end='')
    print()
